#:import utils kivy.utils
#:import MainGui



<ScatterTextWidget>:

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#000131')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 50

            Image:
                source: 'ibklogo.jpg'
                keep_ratio: True
                allow_stretch: False
                opacity: 1
                size_hint: None, None
                size: 95, 50
                pos_hint: {'center_x': 0.3, 'center_y': 0.60}

            Label:
                text: 'IBK Construction Group'
                height: 50
                font_size: 20
                size_hint_y: None
                text_size: self.size
                halign: 'center'
                valign: 'middle'


        BoxLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#01183f')
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 40
            valign: 'middle'

            Label:
                width:74
                text: 'Location'
                height: 40
                font_size: 15
                size_hint_y: None
                size_hint_x: None
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            TextInput:
                id:text_location
                width: 200
                font_size: 15
                size_hint_y: None
                height:40


            Label:
                text:'Date'
                height: 40
                width:45
                font_size: 15
                size_hint_y: None
                size_hint_x: None
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            TextInput:
                id:input_date
                width: 200
                font_size: 15
                size_hint_y: None
                height: 40
                input_location: False

            Label:
                text:'Time (24Hr)'
                width:90
                height: 40
                font_size: 15
                size_hint_y: None
                size_hint_x: None
                text_size: self.size
                halign: 'right'
                valign: 'middle'

            TextInput:
                id:input_time
                width: 200
                font_size: 15
                size_hint_y: None
                height: 40
                input_location: False


        BoxLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#01183f')
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: None
            height: 40

            Button:
                id:run
                background_color: 85, 121, 0, .5
                size_hint_y: None
                text: 'Run'
                height:40
                font_size: 15
                on_release: root.initialize_request()

            Button:
                id:export
                background_color: 51, 51, 0, .5
                size_hint_y: None
                text: 'Export'
                height:40
                font_size: 15
                on_release: root.export_result()

        BoxLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#00056c')
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                id: print_out

                text: ' please introduce the date in this format YYYY-MM-DD'

                height: 30
                font_size: 15
                size_hint_y: None







